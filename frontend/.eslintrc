{
  "extends": [
    "airbnb",
    "plugin:react/recommended",
    "plugin:jest/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "jest"
  ],
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "ecmaFeatures": {
    "jsx": true,
    "es6": true,
    "classes": true
  },
  "rules": {
     "comma-dangle": "off",
     "no-underscore-dangle" : 0,
     "new-cap":0,
     "max-len": [1, 200, 4],
     "arrow-body-style": [0],
     "react/jsx-no-bind": [0],
     "import/no-unresolved": [0], // Until import plugin supports webpack 2 resolveModules
     "react/jsx-space-before-closing":0,
     "react/prefer-stateless-function":0,
     "react/first-prop-new-line":0,
    "no-shadow": 0
  }
}
