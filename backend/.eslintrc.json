{
  "extends": "hapi",
  "rules": {
    "hapi/hapi-capitalize-modules": 0,
    "hapi/hapi-scope-start": 0,
    "arrow-parens": 0,
    "curly": 0,
    "func-style": 0,
    "indent": ["error", 2],
    "no-else-return": 0,
    "no-trailing-spaces": 0,
    "no-undef": 2,
    "no-unused-vars": 0,
    "object-curly-spacing": 0,
    "prefer-arrow-callback": 0,
    "space-before-function-paren": 0,
    "no-eq-null": 0,
    "brace-style": 0,
    "handle-callback-err": 1
  }
}
